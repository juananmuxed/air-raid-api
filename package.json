{
  "name": "air-raid-api",
  "version": "0.1.0",
  "description": "API REST for Air Raid board game",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon - exec 'ts-node' src/index.ts",
    "lint": "eslint . - ext .ts",
    "build": "tsc",
    "docker:stop": "docker stop template-api-container || true",
    "docker:build": "docker build . -t template-api:latest",
    "docker:clear": "docker rm template-api-container",
    "docker:run": "docker run -d --restart always -p 3000:3000 --env-file .env.production --name template-api-container --add-host host.docker.internal:host-gateway template-api",
    "docker:prune": "yes | docker system prune -a",
    "docker:deploy": "npm run docker:stop && npm run docker:build && npm run docker:clear && npm run docker:run && npm run docker:prune",
    "patch": "npm version patch -m \"ðŸ©¹ Patch upgrade to version %s\" & git push --tags",
    "minor": "npm version minor -m \"ðŸ’Š Minor upgrade to version %s\" & git push --tags",
    "major": "npm version major -m \"ðŸŽ‰ Major upgrade to version %s\" & git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juananmuxed/air-raid-api.git"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "rest"
  ],
  "author": "MuXeD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/juananmuxed/air-raid-api/issues"
  },
  "homepage": "https://github.com/juananmuxed/air-raid-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.2.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
